<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    tools:context=".FixturesFragment">

    <ProgressBar
        android:id="@+id/fixtures_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="32dp" />

    <TextView
        android:id="@+id/fixtures_empty_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/raleway_extra_bold"
        android:gravity="center"
        android:text="@string/no_fixtures_here"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fixtures_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>