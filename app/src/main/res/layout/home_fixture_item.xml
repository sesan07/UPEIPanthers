<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_fixture_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fixture_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/temp_image"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorImageOverlay"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:fontFamily="@font/raleway_extra_bold"
            android:gravity="center"
            android:text="@string/upcoming_fixture"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_fixture_category_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fontFamily="@font/raleway_semi_bold"
            android:gravity="center"
            android:text="@string/textview"
            android:textAllCaps="false"
            android:textColor="@color/colorTextLight"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fontFamily="@font/raleway_semi_bold"
            android:gravity="center"
            android:text="@string/textview"
            android:textAllCaps="true"
            android:textColor="@color/colorTextLight"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_opponent_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:fontFamily="@font/raleway_extra_bold"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/textview"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>